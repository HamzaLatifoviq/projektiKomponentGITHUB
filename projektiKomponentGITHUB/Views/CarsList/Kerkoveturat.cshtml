@model List<projektiKomponentGITHUB.Models.Veturat>

@{
    ViewBag.Title = "Rezultatet e Kërkimit";
}

<div class="container mt-4">
    <h3 class="mb-4">Rezultatet për makinat</h3>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var vetura in Model)
        {
            <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
                <div class="col-md-3">
                    <img src="~/Content/ArtinFoto/@vetura.FotoPath" class="img-fluid rounded"
                         style="height: 220px; width: 150%; object-fit: cover;" alt="@vetura.Emri" />
                </div>
                <div class="col-md-6">
                    <h5 class="mb-1">@vetura.Emri - @vetura.Kategoria</h5>
                    <p class="text-muted mb-1">@vetura.Qyteti · @vetura.Distanca km nga qendra · @vetura.Transmetimi · @vetura.LlojiKarburantit</p>
                    <p class="mb-2">@vetura.Pershkrimi</p>
                </div>
                <div class="col-md-3 text-end">
                    <span class="badge bg-primary fs-6 p-2">Shumë mirë 8.6</span><br />
                    <small class="text-muted">147 recensione</small><br />
                    <a href="@Url.Action("Details", "ListaEMakinave", new { id = vetura.Id })"
                       class="btn btn-outline-primary mt-2">Shiko</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Nuk u gjet asnjë veturë për filtrat e zgjedhur.</div>
    }
</div>
