@{
    ViewBag.Title = "Detajet e Veturës";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <!-- Informacioni për Toyota Yaris dhe foto -->
    <div class="row bg-white shadow rounded p-4 mb-4">
        <div class="col-md-6 mb-3">
            <img src="~/Content/ArtinFoto/toyota.jpg" class="img-fluid rounded shadow-sm" alt="Toyota Yaris"
                 style="max-height: 450px; width: 100%; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h3 class="text-primary">Toyota Yaris - Kompakt</h3>
            <p class="text-muted mb-1"><i class="bi bi-geo-alt-fill me-1"></i>Tetovë · 1.8 km nga qendra</p>
            <p class="text-muted mb-1"><i class="bi bi-gear-fill me-1"></i>Manual · <i class="bi bi-fuel-pump me-1"></i>Benzinë</p>
            <p class="mt-2">Makina e vogël për qytet, shumë ekonomike dhe lehtë për t'u manovruar.</p>
        </div>
    </div>

    <!-- Pajisjet shtesë për Toyota Yaris -->
    <div class="row bg-white shadow rounded p-4">
        <div class="col-md-6">
            <h5 class="mb-4 text-primary"><i class="bi bi-plus-circle-dotted me-2"></i>Pajisje shtesë</h5>

            <form>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="gpsYaris">
                    <label class="form-check-label" for="gpsYaris">
                        <i class="bi bi-geo me-2"></i>GPS – €5.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="babySeatYaris">
                    <label class="form-check-label" for="babySeatYaris">
                        <i class="bi bi-person-fill me-2"></i>Sedilje për foshnje – €10.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="childSeatYaris">
                    <label class="form-check-label" for="childSeatYaris">
                        <i class="bi bi-person-standing me-2"></i>Sedilje për fëmijë – €10.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="privateDriverYaris">
                    <label class="form-check-label" for="privateDriverYaris">
                        <i class="bi bi-steering-wheel me-2"></i>Shofer privat – €50.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="extraInsuranceYaris">
                    <label class="form-check-label" for="extraInsuranceYaris">
                        <i class="bi bi-shield-check me-2"></i>Sigurim shtesë – €20.00
                    </label>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="additionalDriverYaris">
                    <label class="form-check-label" for="additionalDriverYaris">
                        <i class="bi bi-person-plus me-2"></i>Driver shtesë – €50.00 / ditë
                    </label>
                </div>

                <button type="button" class="btn btn-primary w-50">Rezervo</button>
            </form>
        </div>

        <!-- Pick-up dhe Drop-off për Toyota Yaris -->
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="bg-light rounded p-4 h-100">
                <h5 class="text-secondary mb-3"><i class="bi bi-calendar-event me-2"></i>Pick-up & Drop-off</h5>
                <p class="mb-2"><strong>Pick-up:</strong> 6 Maj · 10:00 — Tetovë, Stacioni Qendror</p>
                <p><strong>Drop-off:</strong> 9 Maj · 10:00 — Tetovë, Stacioni Qendror</p>
            </div>
        </div>
    </div>
</div>


