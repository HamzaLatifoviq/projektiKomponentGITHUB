@{
    ViewBag.Title = "Detajet e Veturës";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .text-orange {
        color: #ff6f00 !important;
    }

    .btn-orange {
        background: linear-gradient(45deg, #ff6f00, #ff8f00);
        color: white;
        border: none;
        transition: background 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(255, 143, 0, 0.4);
    }

        .btn-orange:hover {
            background: linear-gradient(45deg, #e65100, #ff6f00);
            box-shadow: 0 6px 14px rgba(255, 143, 0, 0.6);
        }

    .bg-light-orange {
        background-color: #fff3e0;
    }

    .form-select:focus {
        border-color: #ff8f00;
        box-shadow: 0 0 8px rgba(255, 143, 0, 0.5);
        outline: none;
    }
</style>

<div class="container mt-5">
    <!-- Informacioni për veturën dhe foto -->
    <div class="row bg-white shadow rounded p-4 mb-4">
        <div class="col-md-6 mb-3">
            <img src="~/Content/ArtinFoto/bmwx5.jpg" class="img-fluid rounded shadow-sm" alt="BMW X5"
                 style="max-height: 450px; width: 100%; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h3 class="text-orange">BMW X5 - SUV</h3>
            <p class="text-muted mb-1"><i class="bi bi-geo-alt-fill me-1"></i>Prishtinë · 2.5 km nga qendra</p>
            <p class="text-muted mb-1"><i class="bi bi-gear-fill me-1"></i>Automatike · <i class="bi bi-fuel-pump me-1"></i>Dizel</p>
            <p class="mt-2">SUV luksoz dhe i fuqishëm, perfekt për udhëtime të gjata dhe familjare.</p>
        </div>
    </div>

    <!-- Pajisjet shtesë dhe Pick-up/Drop-off -->
    <div class="row bg-white shadow rounded p-4">
        <!-- Pajisje shtesë -->
        <div class="col-md-6">
            <h5 class="mb-4 text-orange"><i class="bi bi-plus-circle-dotted me-2"></i>Pajisje shtesë</h5>
            <form>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="gps">
                    <label class="form-check-label" for="gps">
                        <i class="bi bi-geo me-2"></i>GPS – €5.00 / ditë
                    </label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="babySeat">
                    <label class="form-check-label" for="babySeat">
                        <i class="bi bi-person-fill me-2"></i>Sedilje për foshnje – €10.00 / ditë
                    </label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="extraInsurance">
                    <label class="form-check-label" for="extraInsurance">
                        <i class="bi bi-shield-check me-2"></i>Sigurim shtesë – €20.00
                    </label>
                </div>
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="additionalDriver">
                    <label class="form-check-label" for="additionalDriver">
                        <i class="bi bi-person-plus me-2"></i>Driver shtesë – €50.00 / ditë
                    </label>
                </div>
                <button type="button" class="btn btn-orange w-50" id="rezervoBtn">Rezervo</button>
            </form>
        </div>

        <!-- Pick-up dhe Drop-off -->
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="bg-light-orange rounded p-4 h-100">
                <h5 class="text-orange mb-3"><i class="bi bi-calendar-event me-2"></i>Pick-up & Drop-off</h5>
                <p class="mb-2">
                    <strong>Pick-up:</strong> 6 Maj · 10:00 — Prishtinë, Stacioni Qendror
                </p>
                <div class="mb-2">
                    <label for="dropoffLocation" class="form-label"><strong>Drop-off:</strong></label>
                    <select id="dropoffLocation" name="dropoffLocation" class="form-select">
                        <option value="shkup">Shkup, Stacioni Qendror</option>
                        <option value="tirane">Tiranë, Stacioni Qendror</option>
                        <option value="prishtine">Prishtinë, Stacioni Qendror</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("rezervoBtn").addEventListener("click", function () {
        showReservationMessages();
    });

    function showReservationMessages() {
        const chatBox = document.getElementById("chat-box");
        const chatToggle = document.getElementById("chat-toggle");

        if (chatBox && chatBox.style.display === "none") {
            chatBox.style.display = "flex";
            if (chatToggle) chatToggle.style.display = "none";
        }

        setTimeout(() => {
            addMessage("ChatBot", "Ju sapo keni rezervuar.");
        }, 500);

        setTimeout(() => {
            addMessage("ChatBot", "24 orë para pickup time do të merrni një kujtesë rreth rezervimit.");
        }, 1500);
    }

    function addMessage(sender, message) {
        const chatMessages = document.getElementById("chat-messages");
        const newMessage = document.createElement("div");
        newMessage.className = sender === "ChatBot" ? "chat-message bot" : "chat-message user";
        newMessage.innerHTML = `<strong>${sender}:</strong> ${message}`;
        chatMessages.appendChild(newMessage);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }
</script>
