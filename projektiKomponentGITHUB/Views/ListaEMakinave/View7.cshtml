@{
    ViewBag.Title = "Detajet e Veturës";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <!-- Informacioni për Audi Q5 dhe foto -->
    <div class="row bg-white shadow rounded p-4 mb-4">
        <div class="col-md-6 mb-3">
            <img src="~/Content/ArtinFoto/audiq5.jpg" class="img-fluid rounded shadow-sm" alt="Audi Q5"
                 style="max-height: 450px; width: 100%; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h3 class="text-primary">Audi Q5 - SUV</h3>
            <p class="text-muted mb-1"><i class="bi bi-geo-alt-fill me-1"></i>Tiranë · 2.0 km nga qendra</p>
            <p class="text-muted mb-1"><i class="bi bi-gear-fill me-1"></i>Automatike · <i class="bi bi-fuel-pump me-1"></i>Benzinë</p>
            <p class="mt-2">SUV i gjithanshëm për udhëtime urbane dhe në natyrë me teknologji moderne.</p>
        </div>
    </div>

    <!-- Pajisjet shtesë për Audi Q5 -->
    <div class="row bg-white shadow rounded p-4">
        <div class="col-md-6">
            <h5 class="mb-4 text-primary"><i class="bi bi-plus-circle-dotted me-2"></i>Pajisje shtesë</h5>

            <form>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="gpsAudiQ5">
                    <label class="form-check-label" for="gpsAudiQ5">
                        <i class="bi bi-geo me-2"></i>GPS – €5.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="babySeatAudiQ5">
                    <label class="form-check-label" for="babySeatAudiQ5">
                        <i class="bi bi-person-fill me-2"></i>Sedilje për foshnje – €3.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="childSeatAudiQ5">
                    <label class="form-check-label" for="childSeatAudiQ5">
                        <i class="bi bi-person-standing me-2"></i>Sedilje për fëmijë – €3.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="privateDriverAudiQ5">
                    <label class="form-check-label" for="privateDriverAudiQ5">
                        <i class="bi bi-steering-wheel me-2"></i>Shofer privat – €15.00 / ditë
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="extraInsuranceAudiQ5">
                    <label class="form-check-label" for="extraInsuranceAudiQ5">
                        <i class="bi bi-shield-check me-2"></i>Sigurim shtesë – €10.00
                    </label>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="additionalDriverAudiQ5">
                    <label class="form-check-label" for="additionalDriverAudiQ5">
                        <i class="bi bi-person-plus me-2"></i>Driver shtesë – €3.00 / ditë
                    </label>
                </div>

                <button type="button" class="btn btn-primary w-50">Rezervo</button>
            </form>
        </div>

        <!-- Pick-up dhe Drop-off për Audi Q5 -->
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="bg-light rounded p-4 h-100">
                <h5 class="text-secondary mb-3"><i class="bi bi-calendar-event me-2"></i>Pick-up & Drop-off</h5>
                <p class="mb-2"><strong>Pick-up:</strong> 6 Maj · 10:00 — Tiranë, Stacioni Qendror</p>
                <p><strong>Drop-off:</strong> 9 Maj · 10:00 — Tiranë, Stacioni Qendror</p>
            </div>
        </div>
    </div>
</div>
