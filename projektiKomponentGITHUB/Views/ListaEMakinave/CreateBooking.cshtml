@model projektiKomponentGITHUB.Models.BookingViewModel

@{
    ViewBag.Title = "Create Booking";
}

<h2>Create Booking</h2>

@using (Html.BeginForm("CreateBooking", "ListaEMakinave", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.VeturaId)

    <div class="form-group">
        @Html.LabelFor(m => m.Emri, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <p class="form-control-static">@Model.Emri</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DropOffLocation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DropOffLocation, new { @class = "form-control", placeholder = "Enter drop-off location" })
            @Html.ValidationMessageFor(m => m.DropOffLocation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PickupDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PickupDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(m => m.PickupDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DropoffDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DropoffDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(m => m.DropoffDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Add-ons</h4>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.GPS) GPS
        </label>
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.BabySeat) Baby Seat
        </label>
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.ExtraInsurance) Extra Insurance
        </label>
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.AdditionalDriver) Additional Driver
        </label>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Book Now" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}