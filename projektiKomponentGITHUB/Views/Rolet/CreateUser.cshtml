@model projektiKomponentGITHUB.Models.UserViewModel

@{
    ViewBag.Title = "Shto Perdorues";
}

<h2>Shto Perdorues</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Emri)
        @Html.TextBoxFor(m => m.Emri, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Emri)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Mbiemri)
        @Html.TextBoxFor(m => m.Mbiemri, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Mbiemri)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Role)
        @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "Client", "Admin", "HotelManager", "CarAgencyManager" }), "Zgjidh rolin", new { @class = "form-select" })
        @Html.ValidationMessageFor(m => m.Role)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <button type="submit" class="btn btn-primary">Shto</button>
    @Html.ActionLink("Anulo", "Roli_Admin", null, new { @class = "btn btn-secondary ms-2" })
}
