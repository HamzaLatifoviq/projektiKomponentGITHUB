@{
    ViewBag.Title = "Roli_HotelManager";
}

<div class="container mt-5">
    <h2>🏨 Hotel Manager Dashboard</h2>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs mt-4" id="hotelManagerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms" type="button" role="tab">🛏️ Manage Rooms</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="availability-tab" data-bs-toggle="tab" data-bs-target="#availability" type="button" role="tab">📅 Update Availability</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reservations-tab" data-bs-toggle="tab" data-bs-target="#reservations" type="button" role="tab">📥 View Reservations</button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 border border-top-0 shadow-sm" id="hotelManagerTabsContent">
        <!-- Rooms Tab -->
        <div class="tab-pane fade show active" id="rooms" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>🛏️ Manage Rooms</h4>
                <button class="btn btn-sm btn-success">➕ Add Room</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Room Number</th>
                        <th>Type</th>
                        <th>Price/Night</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>101</td>
                        <td>Double Deluxe</td>
                        <td>$120</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Availability Tab -->
        <div class="tab-pane fade" id="availability" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>📅 Update Availability</h4>
                <button class="btn btn-sm btn-success">➕ Add Availability</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Room #</th>
                        <th>Date</th>
                        <th>Is Available</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>2025-05-10</td>
                        <td>Yes</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Reservations Tab -->
        <div class="tab-pane fade" id="reservations" role="tabpanel">
            <h4>📥 View Reservations</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Guest Name</th>
                        <th>Room #</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Arber R.</td>
                        <td>101</td>
                        <td>2025-05-10</td>
                        <td>2025-05-14</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
