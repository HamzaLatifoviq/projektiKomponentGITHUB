@{
    ViewBag.Title = "Roli_HotelManager";
}

<div class="container mt-5">
    <h2>Paneli i Menaxherit te Hotelit</h2>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs mt-4" id="hotelManagerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms" type="button" role="tab">Menaxho Dhomat</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="availability-tab" data-bs-toggle="tab" data-bs-target="#availability" type="button" role="tab">Perditeso Disponueshmerine</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reservations-tab" data-bs-toggle="tab" data-bs-target="#reservations" type="button" role="tab">Shiko Rezervimet</button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 border border-top-0 shadow-sm" id="hotelManagerTabsContent">
        <!-- Rooms Tab -->
        <div class="tab-pane fade show active" id="rooms" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Menaxho Dhomat</h4>
                <button class="btn btn-sm btn-success">Shto Dhome</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Numri i Dhomes</th>
                        <th>Tipi</th>
                        <th>Cmimi/Nate</th>
                        <th>Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>101</td>
                        <td>Double Deluxe</td>
                        <td>$120</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Ndrysho</button>
                            <button class="btn btn-sm btn-danger">Fshij</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Availability Tab -->
        <div class="tab-pane fade" id="availability" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Perditeso Disponueshmerine</h4>
                <button class="btn btn-sm btn-success">Shto Disponueshmeri</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Dhoma #</th>
                        <th>Data</th>
                        <th>Eshte e Lire</th>
                        <th>Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>2025-05-10</td>
                        <td>Po</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Ndrysho</button>
                            <button class="btn btn-sm btn-danger">Fshij</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Reservations Tab -->
        <div class="tab-pane fade" id="reservations" role="tabpanel">
            <h4>Shiko Rezervimet</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Emri i Klientit</th>
                        <th>Dhoma #</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Arber R.</td>
                        <td>101</td>
                        <td>2025-05-10</td>
                        <td>2025-05-14</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
