@model List<projektiKomponentGITHUB.Models.Hotel>

@{
    var reservations = ViewBag.Reservations as List<projektiKomponentGITHUB.Models.Reservation>;
    var payments = ViewBag.Payments as List<projektiKomponentGITHUB.Models.Payments2Hotel>;
}
<div class="container mt-5">
    <h2>Paneli i Menaxherit te Hotelit</h2>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs mt-4" id="hotelManagerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms" type="button" role="tab">Menaxho Dhomat</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="availability-tab" data-bs-toggle="tab" data-bs-target="#availability" type="button" role="tab">Perditeso Disponueshmerine</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reservations-tab" data-bs-toggle="tab" data-bs-target="#reservations" type="button" role="tab">Shiko Rezervimet</button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 border border-top-0 shadow-sm" id="hotelManagerTabsContent">
        <!-- Rooms Tab -->
        <div class="tab-pane fade show active" id="rooms" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Menaxho Dhomat</h4>
                <button class="btn btn-sm btn-success">Shto Dhome</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Numri i Dhomes</th>
                        <th>Tipi</th>
                        <th>Cmimi/Nate</th>
                        <th>Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>101</td>
                        <td>Double Deluxe</td>
                        <td>$120</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Ndrysho</button>
                            <button class="btn btn-sm btn-danger">Fshij</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Availability Tab -->
        <div class="tab-pane fade" id="availability" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Perditeso Disponueshmerine</h4>
                <button class="btn btn-sm btn-success">Shto Disponueshmeri</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Dhoma #</th>
                        <th>Data</th>
                        <th>Eshte e Lire</th>
                        <th>Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>2025-05-10</td>
                        <td>Po</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Ndrysho</button>
                            <button class="btn btn-sm btn-danger">Fshij</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Reservations Tab -->
        <div class="tab-pane fade" id="reservations" role="tabpanel">
            <h4>Shiko Rezervimet</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Reservation ID</th>
                        <th>Hotel ID</th>
                        <th>Emri</th>
                        <th>Mbiemri</th>
                        <th>Emaili</th>
                        <th>Add-ons</th>
                        <th>Price at Booking</th>
                    </tr>
                </thead>
                <tbody>
                    @if (reservations != null && reservations.Any())
                    {
                        foreach (var reservation in reservations)
                        {
                            var payment = payments?.FirstOrDefault(p => p.ReservationID == reservation.ReservationID);
                            <tr>
                                <td>@reservation.ReservationID</td>
                                <td>@reservation.HotelID</td>
                                <td>@(payment?.Emri ?? "N/A")</td>
                                <td>@(payment?.Mbiemri ?? "N/A")</td>
                                <td>@(payment?.Emaili ?? "N/A")</td>
                                <td>@reservation.DataCheckIn</td>
                                <td>@reservation.DataCheckOut</td>
                                <td>@reservation.CmimiTotal</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Nuk ka rezervime për të shfaqur.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
