@{
    ViewBag.Title = "Roli_VeturManager";
}

<div class="container mt-5">
    <h2>🚗 Car Rental Agency Dashboard</h2>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs mt-4" id="veturTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="vehicles-tab" data-bs-toggle="tab" data-bs-target="#vehicles" type="button" role="tab">🚙 Manage Vehicles</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="availability-tab" data-bs-toggle="tab" data-bs-target="#availability" type="button" role="tab">📅 Set Availability</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reservations-tab" data-bs-toggle="tab" data-bs-target="#reservations" type="button" role="tab">📥 View Reservations</button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 border border-top-0 shadow-sm" id="veturTabsContent">
        <!-- Vehicles Tab -->
        <div class="tab-pane fade show active" id="vehicles" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>🚙 Manage Vehicles</h4>
                <button class="btn btn-sm btn-success">➕ Add Vehicle</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Model</th>
                        <th>Type</th>
                        <th>Price/Day</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>VW Golf 7</td>
                        <td>Hatchback</td>
                        <td>$35</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Availability Tab -->
        <div class="tab-pane fade" id="availability" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>📅 Set Rental Availability</h4>
                <button class="btn btn-sm btn-success">➕ Add Availability</button>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Date</th>
                        <th>Available</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>VW Golf 7</td>
                        <td>2025-05-12</td>
                        <td>Yes</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Reservations Tab -->
        <div class="tab-pane fade" id="reservations" role="tabpanel">
            <h4>📥 View Reservations</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Customer</th>
                        <th>Vehicle</th>
                        <th>From</th>
                        <th>To</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Hamza B.</td>
                        <td>VW Golf 7</td>
                        <td>2025-05-12</td>
                        <td>2025-05-15</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
