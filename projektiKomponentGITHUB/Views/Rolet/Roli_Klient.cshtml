@{
    ViewBag.Title = "Roli_Klient";
}

<div class="container mt-5">
    <h2>Paneli i Klientit</h2>

    <!-- Rreshti me lartesi te barabarte -->
    <div class="row mt-4 d-flex align-items-stretch">
        <!-- Kolona e majte -->
        <div class="col-md-6">
            <div class="d-flex flex-column h-100 gap-3">
                <!-- Kerko Hotele -->
                <div class="card p-3 shadow-sm flex-fill">
                    <h4>Kerko Hotele</h4>
                    <p>Kerko dhe rezervo shpejt hotelet ne dispozicion.</p>
                    <a href="@Url.Action("HotelList", "Home")" class="btn btn-primary">Shko te Lista e Hoteleve</a>
                </div>

                <!-- Kerko Vetura -->
                <div class="card p-3 shadow-sm flex-fill">
                    <h4>Kerko Vetura</h4>
                    <p>Kerko veturat per qira.</p>
                    <a href="@Url.Action("CarList", "Home")" class="btn btn-primary">Shko te Veturat</a>
                </div>
            </div>
        </div>

        <!-- Kolona e djathte: Ndrysho Profilin -->
        <div class="col-md-6">
            <div class="card p-3 shadow-sm h-100">
                <h4>Ndrysho Profilin</h4>
                <form method="post" action="#">
                    <div class="form-group mt-2">
                        <label>Perdoruesi</label>
                        <input type="text" class="form-control" placeholder="Shkruaj perdoruesin e ri">
                    </div>

                    <div class="form-group mt-3">
                        <label>Konfirmo Fjalekalimin</label>
                        <input type="password" class="form-control" placeholder="Shkruaj fjalekalimin per verifikim">
                    </div>

                    <div class="form-group mt-3">
                        <label>Fjalekalimi i Ri</label>
                        <input type="password" class="form-control" placeholder="Shkruaj fjalekalimin e ri">
                    </div>

                    <button type="submit" class="btn btn-success mt-3">Ruaj Ndryshimet</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Ndares -->
    <hr class="my-5" />

    <!-- Seksioni: Rezervimet e mia -->
    <div class="mt-5">
        <h4>Rezervimet e Mia</h4>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Lloji i Rezervimit</th>
                    <th>Detaje</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Hotel</td>
                    <td>Hotel California, Tetove</td>
                    <td>2025-05-10</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Qira Veture</td>
                    <td>VW Golf 7, 3 dite</td>
                    <td>2025-05-12</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
