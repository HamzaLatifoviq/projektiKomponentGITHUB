@{
    ViewBag.Title = "rezervimHoteli";
}

@{
    ViewBag.Title = "KerkoHotelet - Maqedonia";
}

<h2 class="text-center my-4">Kerko Hotelet</h2>
<div class="container my-5">
    <style>
        .image-container {
            width: 100%;
            height: 200px; /* Set fixed height for consistency */
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 8px; /* Optional rounded corners */
            background-color: #f8f9fa; /* Neutral background asas*/
        }

        .hotel-image {
            width: 100%; /* Full width of the container */
            height: 100%; /* Full height of the container */
            object-fit: cover; /* Ensures images fill the container without stretching */
        }
    </style>

    <!-- Hotel 1 -->
    <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
        <div class="col-md-3">
            <div class="image-container">
                <img src="/Content/BesnikFotoHotel/hotelstone.jpg" class="hotel-image" alt="Hotel Stone Bridge">
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="mb-1 text-dark">Hotel Stone Bridge</h5>
            <p class="text-muted mb-1">Shkup · 0.1 km nga qendra e qytetit · 5 Yje</p>
            <p class="mb-2">
                Një ndërtesë ikonike e vendosur mbi lumin Vardar,
                Stone Bridge Hotel sjell një kombinim perfekt të luksit modern dhe trashëgimisë historike.
                Me pamje mahnitëse nga ura e gurit dhe afërsi të monumenteve kulturore të qytetit,
                ky hotel është zgjedhja ideale për udhëtarët që kërkojnë rehati dhe elegancë.
            </p>
        </div>
        <div class="col-md-3 text-end">
            <span class="badge bg-primary fs-6 p-2">Fantastike 9.3</span><br />
            <small class="text-muted">275 recensione</small><br />
            <a href="@Url.Action("Hotel1", "HoteletView")" class="btn btn-outline-primary mt-2">Rezervo Tani</a>
        </div>
    </div>

    <!-- Hotel 2 -->
    <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
        <div class="col-md-3">
            <div class="image-container">
                <img src="/Content/BesnikFotoHotel/AleksandarPalac.jpg" class="hotel-image" alt="Aleksandar Palace">
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="mb-1 text-dark">Aleksandar Palace</h5>
            <p class="text-muted mb-1">Shkup · 2.0 km nga qendra e qytetit · 5 Yje</p>
            <p class="mb-2">
                Një ikonë e luksit dhe komoditetit,
                Aleksander Palace Hotel & Spa kombinon elegancën bashkëkohore me mikpritjen tradicionale.
                I pozicionuar pranë Parkut të Qytetit, ky hotel ofron dhoma të bollshme, spa të avancuar dhe shërbim të jashtëzakonshëm.
                Ideale për udhëtime biznesi apo pushime relaksuese.
            </p>
        </div>
        <div class="col-md-3 text-end">
            <span class="badge bg-primary fs-6 p-2">Fantastike 9.0</span><br />
            <small class="text-muted">320 recensione</small><br />
            <a href="@Url.Action("Hotel2", "HoteletView")" class="btn btn-outline-primary mt-2">Rezervo Tani</a>
        </div>
    </div>

    <!-- Hotel 3 -->
    <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
        <div class="col-md-3">
            <div class="image-container">
                <img src="/Content/BesnikFotoHotel/bushiresortspa.jpg" class="hotel-image" alt="Bushi Resort & Spa">
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="mb-1 text-dark">Bushi Resort & Spa</h5>
            <p class="text-muted mb-1">Shkup · 0.5 km nga Sheshi Maqedonia</p>
            <p class="mb-2">
                Një destinacion kulinar për të apasionuarit pas kuzhinës tradicionale dhe asaj moderne.
                Restorant Bushi ofron një përvojë të pashembullt me specialitete të shijshme,
                atmosferë të ngrohtë dhe pamje mbresëlënëse mbi qytet.
                Vendndodhja pranë qendrës e bën zgjedhjen ideale për darka të paharrueshme.
            </p>
        </div>
        <div class="col-md-3 text-end">
            <span class="badge bg-primary fs-6 p-2">Mirë 8.5</span><br />
            <small class="text-muted">120 recensione</small><br />
            <a href="@Url.Action("Hotel3", "HoteletView")" class="btn btn-outline-primary mt-2">Rezervo Tani</a>
        </div>
    </div>

    <!-- Hotel 4 -->
    <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
        <div class="col-md-3">
            <div class="image-container">
                <img src="/Content/BesnikFotoHotel/TinoHotelSpa.jpg" class="hotel-image" alt="Tino Hotel & SPA">
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="mb-1 text-dark">Tino Hotel & SPA</h5>
            <p class="text-muted mb-1"> Ohër · 0.3 km nga qendra · 4 Yje</p>
            <p class="mb-2">
                Hotel me ambiente të qeta dhe pamje të mrekullueshme mbi liqenin e Ohrit.
                Ideale për pushime relaksuese, Vila Arta ndodhet vetëm pak minuta larg qendrës së qytetit,
                duke ofruar një kombinim të përkryer të komoditetit dhe vendndodhjes strategjike.
            </p>
        </div>
        <div class="col-md-3 text-end">
            <span class="badge bg-primary fs-6 p-2">Superb 9.1</span><br />
            <small class="text-muted">150 recensione</small><br />
            <a href="@Url.Action("Hotel4", "HoteletView")" class="btn btn-outline-primary mt-2">Rezervo Tani</a>
        </div>
    </div>

    <!-- Hotel 5 -->
    <div class="row mb-4 shadow-sm p-3 bg-white rounded align-items-center">
        <div class="col-md-3">
            <div class="image-container">
                <img src="/Content/BesnikFotoHotel/CityPalaceHotel.jpg" class="hotel-image" alt="City Palace Hotel">
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="mb-1 text-dark">City Palace Hotel</h5>
            <p class="text-muted mb-1">City Palace Hotel Ohër · 0.3 km nga Qendra e Qytetit · 4 Yje</p>
            <p class="mb-2">
                Hotel luksoz i vendosur buzë liqenit të Ohrit, vetëm disa minuta larg Qytetit të Vjetër.
                Ofron dhoma moderne me pamje nga liqeni,
                shërbim të shkëlqyer dhe ambient relaksues, ideal për pushime komode dhe elegante.
            </p>
        </div>
        <div class="col-md-3 text-end">
            <span class="badge bg-primary fs-6 p-2">Shumë mirë 8.8</span><br />
            <small class="text-muted">220 recensione</small><br />
            <a href="@Url.Action("Hotel5", "HoteletView")" class="btn btn-outline-primary mt-2">Rezervo Tani</a>
        </div>
    </div>
</div>
