
@{
    ViewBag.Title = "PagesatView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .payment-form {
        max-width: 800px;
        margin: auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    .form-label {
        font-weight: 500;
    }

    .form-control, .form-select {
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #4a69bd;
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 10px;
        transition: 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #3b56a3;
        }

    h2 {
        font-weight: 600;
        color: #333;
    }
</style>

<div class="payment-form mt-5 mb-5">
    <h2 class="mb-4 text-center">Forma e Pagesës</h2>

    <form>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="firstName" class="form-label">Emri</label>
                <input type="text" class="form-control" id="firstName" placeholder="Ardit" required>
            </div>
            <div class="col-md-6">
                <label for="lastName" class="form-label">Mbiemri</label>
                <input type="text" class="form-control" id="lastName" placeholder="Hoxha" required>
            </div>

            <div class="col-md-6">
                <label for="cardNumber" class="form-label">Numri i Kartës</label>
                <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" required>
            </div>
            <div class="col-md-3">
                <label for="cvv" class="form-label">CVV</label>
                <input type="text" class="form-control" id="cvv" placeholder="123" required>
            </div>
            <div class="col-md-3">
                <label for="expiry" class="form-label">Data e Skadimit</label>
                <input type="text" class="form-control" id="expiry" placeholder="MM/YY" required>
            </div>

            <div class="col-md-6">
                <label for="address" class="form-label">Adresa</label>
                <input type="text" class="form-control" id="address" placeholder="Rruga e Dibrës, Tiranë" required>
            </div>

            <div class="col-md-6">
                <label for="email" class="form-label">Email-i</label>
                <input type="email" class="form-control" id="email" placeholder="shembull@email.com" required>
            </div>

            <div class="col-md-6">
                <label for="paymentMethod" class="form-label">Mënyra e Pagesës</label>
                <select class="form-select" id="paymentMethod" required>
                    <option selected disabled>Zgjidh metodën</option>
                    <option value="card">Kartë Krediti/Debiti</option>
                    <option value="paypal">PayPal</option>
                    <option value="bank">Transfer Bankar</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="amount" class="form-label">Shuma (€)</label>
                <input type="number" class="form-control" id="amount" placeholder="150.00" required>
            </div>
        </div>

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary">
                Kryej Pagesën
            </button>
        </div>
    </form>
</div>