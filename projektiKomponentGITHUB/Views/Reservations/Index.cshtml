@model IEnumerable<projektiKomponentGITHUB.Models.ReservationViewModel>

@{
    ViewBag.Title = "Lista e Rezervimeve";
}

<h2>Lista e Rezervimeve</h2>

<p>
    @Html.ActionLink("Shto Rezervim", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Emaili</th>
            <th>Hoteli</th>
            <th>Dhomë</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Të Rritur</th>
            <th>Fëmijë</th>
            <th>Dhomat</th>
            <th>Cmimi Total (€)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Emri</td>
                <td>@reservation.Mbiemri</td>
                <td>@reservation.Emaili</td>
                <td>@reservation.HotelEmri</td>
                <td>@reservation.RoomLlojiDhomes</td>
                <td>@reservation.DataCheckIn.ToString("yyyy-MM-dd")</td>
                <td>@reservation.DataCheckOut.ToString("yyyy-MM-dd")</td>
                <td>@reservation.NumriTeRriturve</td>
                <td>@reservation.NumriFemijeve</td>
                <td>@reservation.NumriDhomave</td>
                <td>@reservation.CmimiTotal.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
