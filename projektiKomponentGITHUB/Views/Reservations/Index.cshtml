@model projektiKomponentGITHUB.Models.Reservation

@{
    ViewBag.Title = "Create Reservation";
}

<h2>Create Reservation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.HotelId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelId)
                @Html.ValidationMessageFor(model => model.HotelId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReservationRange, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReservationRange)
                @Html.ValidationMessageFor(model => model.ReservationRange)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdultsCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdultsCount)
                @Html.ValidationMessageFor(model => model.AdultsCount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChildrenCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChildrenCount)
                @Html.ValidationMessageFor(model => model.ChildrenCount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoomsCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoomsCount)
                @Html.ValidationMessageFor(model => model.RoomsCount)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rezervo" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
