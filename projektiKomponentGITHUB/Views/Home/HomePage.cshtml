<!-- Sistemi i Rating dhe komenter ) -->
<div class="container my-5">
    <h3 class="text-center mb-4">Rate Our Platform & Service</h3>

    <form>
        <div class="text-center mb-3">
            <div class="star-rating d-inline-block">
                <span class="fa fa-star" data-rating="1"></span>
                <span class="fa fa-star" data-rating="2"></span>
                <span class="fa fa-star" data-rating="3"></span>
                <span class="fa fa-star" data-rating="4"></span>
                <span class="fa fa-star" data-rating="5"></span>
                <input type="hidden" name="rating" class="rating-value" value="0">
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-10">
                <textarea class="form-control" name="comment" rows="5" placeholder="Leave your feedback here..." style="resize: none;"></textarea>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </div>
    </form>
</div>


<!-- Font Awesome for stars -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .star-rating .fa {
        font-size: 2rem;
        color: #ddd;
        cursor: pointer;
        transition: color 0.2s;
    }

        .star-rating .fa:hover,
        .star-rating .fa.hovered,
        .star-rating .fa.selected {
            color: #ffc107;
        }
</style>

<script>
    const stars = document.querySelectorAll('.star-rating .fa');
    const ratingInput = document.querySelector('.rating-value');

    stars.forEach((star, index) => {
        star.addEventListener('mouseover', () => {
            resetStars();
            for (let i = 0; i <= index; i++) {
                stars[i].classList.add('hovered');
            }
        });

        star.addEventListener('mouseout', () => {
            resetStars();
            highlightStars(parseInt(ratingInput.value));
        });

        star.addEventListener('click', () => {
            ratingInput.value = index + 1;
            resetStars();
            highlightStars(index + 1);
        });
    });

    function resetStars() {
        stars.forEach(s => s.classList.remove('hovered', 'selected'));
    }

    function highlightStars(count) {
        for (let i = 0; i < count; i++) {
            stars[i].classList.add('selected');
        }
    }
</script>