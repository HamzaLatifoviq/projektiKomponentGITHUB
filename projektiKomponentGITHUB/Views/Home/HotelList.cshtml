@{
    ViewBag.Title = "Lista e Hoteleve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Stilet për formën e kërkimit */
    form.search-form {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;
    }

        form.search-form select,
        form.search-form input[type="date"],
        form.search-form a.btn {
            height: 45px;
            border-radius: 12px;
            font-size: 1rem;
            padding: 0 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border: 1px solid #ced4da;
            transition: box-shadow 0.3s ease, border-color 0.3s ease;
        }

            form.search-form select:focus,
            form.search-form input[type="date"]:focus {
                box-shadow: 0 0 8px 2px rgba(13, 110, 253, 0.5);
                border-color: #0d6efd;
                outline: none;
            }

        form.search-form a.btn {
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
            border: none;
            cursor: pointer;
            text-align: center;
            line-height: 45px;
            min-width: 120px;
            flex-shrink: 0;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
        }

            form.search-form a.btn:hover {
                background-color: #0848c8;
                box-shadow: 0 6px 20px rgba(8, 72, 200, 0.45);
            }

    /* Stil për tituj dhe karta */
    h2, h3 {
        color: #0d6efd;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 1px 4px rgba(13, 110, 253, 0.25);
    }

    .card {
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.07);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-body h5 {
        color: #0d6efd;
        font-weight: 700;
    }

    .card-footer {
        font-weight: 600;
        font-size: 1rem;
        color: #333;
    }
</style>

<div class="container mt-4">
    <h2>Kërko dhe filtro hotelet</h2>

    <!-- Forma e kërkimit me flexbox -->
    <form method="get" action="#" class="search-form">
        <select name="qyteti">
            <option value="">Zgjedh Qytetin</option>
            <option value="Prishtinë">Prishtinë</option>
            <option value="Durrës">Durrës</option>
            <option value="Tetovë">Tetovë</option>
            <option value="Tiranë">Tiranë</option>
            <option value="Shkodër">Shkodër</option>
        </select>

        <select name="lloji">
            <option value="">Lloji i Hotelit</option>
            <option value="Resort">Resort</option>
            <option value="Motel">Motel</option>
            <option value="Villa">Villa</option>
            <option value="Business">Business Hotel</option>
        </select>

        <select name="yje">
            <option value="">Yje</option>
            <option value="1">1 yll</option>
            <option value="2">2 yje</option>
            <option value="3">3 yje</option>
            <option value="4">4 yje</option>
            <option value="5">5 yje</option>
        </select>

        <input type="date" name="checkin" />

        <input type="date" name="checkout" />

        <select name="kapaciteti">
            <option value="">Personat</option>
            <option value="1">1 person</option>
            <option value="2">2 persona</option>
            <option value="3">3 persona</option>
            <option value="4">4+</option>
        </select>

        <a href="@Url.Action("rezervimHoteli","ModuliRezervimeve")" class="btn">Kërko</a>
    </form>

    <h3>Hotelet e rekomanduara</h3>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="/Content/ArtinFoto/Hotel3.jpg" class="card-img-top" alt="Hotel Adriatik">
                <div class="card-body">
                    <h5 class="card-title">Hotel Adriatik</h5>
                    <p class="card-text">Resort luksoz në Durrës me pamje nga deti dhe plazh privat.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 80€/nata</strong>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/Content/ArtinFoto/Hotel1.jpg" class="card-img-top" alt="Villa Elegance">
                <div class="card-body">
                    <h5 class="card-title">Villa Elegance</h5>
                    <p class="card-text">Hotel i qetë në Prishtinë, ideal për udhëtarë biznesi dhe pushime.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 65€/nata</strong>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/Content/ArtinFoto/Hotel2.jpeg" class="card-img-top" alt="Hotel Panorama">
                <div class="card-body">
                    <h5 class="card-title">Hotel Panorama</h5>
                    <p class="card-text">Motel modern në Shkup me shërbime të shkëlqyera dhe çmime të arsyeshme.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 50€/nata</strong>
                </div>
            </div>
        </div>
    </div>
</div>
