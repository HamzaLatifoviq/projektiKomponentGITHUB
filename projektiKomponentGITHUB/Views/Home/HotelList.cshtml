@{
    ViewBag.Title = "Lista e Hoteleve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Kërko dhe filtro hotelet</h2>

    <!-- Forma e kërkimit -->
    <!-- Forma e kërkimit -->
    <form method="get" action="#" class="row g-3 mb-5">
        <!-- Qyteti -->
        <div class="col-md-3">
            <select class="form-control" name="qyteti">
                <option value="">Zgjedh Qytetin</option>
                <option value="Prishtinë">Prishtinë</option>
                <option value="Durrës">Durrës</option>
                <option value="Tetovë">Tetovë</option>
                <option value="Tiranë">Tiranë</option>
                <option value="Shkodër">Shkodër</option>
            </select>
        </div>

        <!-- Lloji i hotelit -->
        <div class="col-md-2">
            <select class="form-control" name="lloji">
                <option value="">Lloji i Hotelit</option>
                <option value="Resort">Resort</option>
                <option value="Motel">Motel</option>
                <option value="Villa">Villa</option>
                <option value="Business">Business Hotel</option>
            </select>
        </div>

        <!-- Yjet -->
        <div class="col-md-2">
            <select class="form-control" name="yje">
                <option value="">Yje</option>
                <option value="1">1 yll</option>
                <option value="2">2 yje</option>
                <option value="3">3 yje</option>
                <option value="4">4 yje</option>
                <option value="5">5 yje</option>
            </select>
        </div>

        <!-- Check-in -->
        <div class="col-md-2">
            <input type="date" class="form-control" name="checkin" />
        </div>

        <!-- Check-out -->
        <div class="col-md-2">
            <input type="date" class="form-control" name="checkout" />
        </div>

        <!-- Kapaciteti -->
        <div class="col-md-2">
            <select class="form-control" name="kapaciteti">
                <option value="">Personat</option>
                <option value="1">1 person</option>
                <option value="2">2 persona</option>
                <option value="3">3 persona</option>
                <option value="4">4+</option>
            </select>
        </div>

        <!-- Kërko -->
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Kërko</button>
        </div>
    </form>
    <!-- Hotelet e Rekomanduara -->
    <h3 class="mb-4">Hotelet e rekomanduara</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Hotel 1 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="/Content/ArtinFoto/Hotel3.jpg" class="card-img-top" alt="Hotel Panorama">


                <div class="card-body">
                    <h5 class="card-title">Hotel Adriatik</h5>
                    <p class="card-text">Resort luksoz në Durrës me pamje nga deti dhe plazh privat.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 80€/nata</strong>
                </div>
            </div>
        </div>

        <!-- Hotel 2 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/Content/ArtinFoto/Hotel1.jpg" class="card-img-top" alt="Hotel Riviera">
                <div class="card-body">
                    <h5 class="card-title">Villa Elegance</h5>
                    <p class="card-text">Hotel i qetë në Prishtinë, ideal për udhëtarë biznesi dhe pushime.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 65€/nata</strong>
                </div>
            </div>
        </div>

        <!-- Hotel 3 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/Content/ArtinFoto/Hotel2.jpeg" class="card-img-top" alt="Hotel Panorama">
                <div class="card-body">
                    <h5 class="card-title">Hotel Panorama</h5>
                    <p class="card-text">Motel modern në Shkup me shërbime të shkëlqyera dhe çmime të arsyeshme.</p>
                </div>
                <div class="card-footer">
                    <strong>Çmimi: 50€/nata</strong>
                </div>
            </div>
        </div>
    </div>
