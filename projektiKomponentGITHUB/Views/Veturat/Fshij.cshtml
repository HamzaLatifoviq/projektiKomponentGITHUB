@model projektiKomponentGITHUB.Models.Veturat

@{
    ViewBag.Title = "Fshij Vetur";
}

<div class="container mt-5">
    <h2>A jeni i sigurt që doni të fshini veturën?</h2>

    <dl class="dl-horizontal">
        <dt>Modeli:</dt>
        <dd>@Model.Emri</dd>
        <dt>Lloji:</dt>
        <dd>@Model.Kategoria</dd>
        <dt>Cmimi:</dt>
        <dd>@Model.Price €</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Po, Fshije</button>
        @Html.ActionLink("Anulo", "Roli_VeturManager", null, new { @class = "btn btn-secondary" })
    }
</div>
